<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_expense_sheet_form_inherit" model="ir.ui.view">
        <field name="name">view.hr.expense.sheet.form.inherit</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="petty_cash_journal_id" domain="[('type', '=', 'purchase')]" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('payment_mode', '!=', 'petty_cash')]}" groups="base.group_no_one"/>
            </xpath>
        </field>
    </record>

</odoo>
