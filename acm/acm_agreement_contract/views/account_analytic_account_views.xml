<odoo>
    <!-- Form View -->
    <record id="account_analytic_account_recurring_form_form" model="ir.ui.view">
        <field name="name">Contract form</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="contract.account_analytic_account_recurring_form_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="agreement_id" domain="[('is_template', '=', False)]"/>
            </field>
            <button name="recurring_create_invoice" position="attributes">
                <attribute name="groups"></attribute>
            </button>
            <xpath expr="//field[@name='recurring_invoice_line_ids']/tree/field[@name='product_id']" position="before">
                <field name="is_select"/>
            </xpath>
        </field>
    </record>
</odoo>
