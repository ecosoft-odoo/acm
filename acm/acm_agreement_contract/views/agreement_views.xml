<odoo>

    <record id="partner_agreement_form_view" model="ir.ui.view">
        <field name="name">Agreement Form</field>
        <field name="model">agreement</field>
        <field name="inherit_id" ref="agreement_legal.partner_agreement_form_view"/>
        <field name="arch" type="xml">
            <button name="create_new_agreement" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="create_new_agreement" position="after">
                <button name="%(agreement_create_action)d"
                        string="Create Agreement"
                        type="action"
                        class="oe_highlight"
                        attrs="{'invisible': [('is_template', '=', False)]}"/>
                <button name="create_new_contract"
                        string="Create Contract"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible': ['|', ('is_contract_create', '=', True), ('is_template', '=', True)]}"/>
            </button>
            <div name="button_box" position="inside">
                <button name="action_view_contract"
                        class="oe_stat_button"
                        type="object"
                        string="Contract"
                        icon="fa-pencil-square-o"
                        attrs="{'invisible': ['|', ('is_contract_create', '=', False), ('is_template', '=', True)]}"/>
            </div>
            <field name="assigned_user_id" position="after">
                <field name="contract_type"/>
                <field name="is_contract_create" invisible="1"/>
            </field>
            <field name="end_date" position="after">
                <field name="date_contract" attrs="{'invisible': [('is_template', '=', True)]}"/>
                <label for="recurring_interval" attrs="{'invisible': [('is_template', '=', True)]}"/>
                <div attrs="{'invisible': [('is_template', '=', True)]}">
                    <field name="recurring_interval" class="oe_inline"/>
                    <field name="recurring_rule_type" class="oe_inline"/>
                </div>
            </field>
            <field name="partner_id" position="attributes">
                <attribute name="attrs">{'required': [('is_template', '=', False)]}</attribute>
            </field>
        </field>
    </record>

</odoo>
