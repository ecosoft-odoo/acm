<odoo>

    <record id="partner_agreement_form_view" model="ir.ui.view">
        <field name="name">Agreement Form</field>
        <field name="model">agreement</field>
        <field name="inherit_id" ref="agreement_legal.partner_agreement_form_view"/>
        <field name="arch" type="xml">
            <field name="state" position="replace"/>
            <field name="stage_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <button name="create_new_agreement" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="create_new_version" position="attributes">
                <attribute name="attrs">{'invisible': [('state', '!=', 'draft')]}</attribute>
            </button>
            <button name="create_new_agreement" position="after">
                <button name="active_statusbar"
                        string="Active"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible': ['|', ('is_template', '=', True), ('state', '!=', 'draft')]}"/>
                <button name="%(agreement_create_action)d"
                        string="New Agreement"
                        type="action"
                        class="oe_highlight"
                        attrs="{'invisible': [('is_template', '=', False)]}"/>
                <button name="create_new_contract"
                        string="New Contract"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible': ['|', ('is_contract_create', '=', True), ('state', '!=', 'active')]}"/>
                <button name="%(contract_extension_action)d"
                        string="Extension Contract"
                        type="action"
                        class="oe_highlight"
                        attrs="{'invisible': ['|', ('is_contract_create', '=', False), ('state', '!=', 'active')]}"/>
                <button name="%(contract_transfer_action)d"
                        string="Transfer Contract"
                        type="action"
                        class="oe_highlight"
                        attrs="{'invisible': ['|', ('is_contract_create', '=', False), ('state', '!=', 'active')]}"/>
                <button name="%(contract_breach_action)d"
                        string="Breach Contract"
                        type="action"
                        class="oe_highlight"
                        attrs="{'invisible': ['|', ('is_contract_create', '=', False), ('state', '!=', 'active')]}"/>
                <button name="%(contract_terminate_action)d"
                        string="Terminate Contract"
                        type="action"
                        class="oe_highlight"
                        attrs="{'invisible': ['|', ('is_contract_create', '=', False), ('state', '!=', 'active')]}"/>
                <button name="inactive_statusbar"
                        string="Inactive"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible': ['|', ('is_template', '=', True), ('state', '!=', 'draft')]}"/>
                <field name="state" widget="statusbar"/>
            </button>
            <div name="button_box" position="inside">
                <button name="action_view_contract"
                        class="oe_stat_button"
                        type="object"
                        string="Contract"
                        icon="fa-pencil-square-o"
                        attrs="{'invisible': ['|', ('is_contract_create', '=', False), ('is_template', '=', True)]}"/>
            </div>
            <field name="agreement_type_id" position="after">
                <field name="extension_agreement_id" string="Extension From"/>
                <field name="transfer_agreement_id" string="Transfer From"/>
            </field>
            <field name="assigned_user_id" position="after">
                <field name="contract_type"/>
                <field name="is_contract_create" invisible="1"/>
            </field>
            <field name="end_date" position="after">
                <field name="date_contract" attrs="{'invisible': [('is_template', '=', True)]}"/>
                <label for="recurring_interval" attrs="{'invisible': [('is_template', '=', True)]}"/>
                <div attrs="{'invisible': [('is_template', '=', True)]}">
                    <field name="recurring_interval" class="oe_inline"/>
                    <field name="recurring_rule_type" class="oe_inline"/>
                </div>
            </field>
            <field name="termination_requested" position="after">
                <field name="breach_date"/>
            </field>
            <field name="partner_id" position="attributes">
                <attribute name="attrs">{'required': [('is_template', '=', False)]}</attribute>
            </field>
            <xpath expr="/form/sheet//group[2]" position="after">
                <group string="Breach Reason">
                   <field name="breach_reason" nolabel="1"/>
               </group>
               <group string="Terminate Reason">
                  <field name="terminate_reason" nolabel="1"/>
              </group>
           </xpath>
           <xpath expr="//page[@name='products']/field/tree" position="attributes">
               <attribute name="editable">buttom</attribute>
           </xpath>
           <field name="uom_id" position="after">
               <field name="lst_price"/>
           </field>
        </field>
    </record>

    <record id="view_project_agreement_kanban" model="ir.ui.view">
        <field name="name">Agreement Kanban</field>
        <field name="model">agreement</field>
        <field name="inherit_id" ref="agreement_legal.view_project_agreement_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="attributes">
                <attribute name="default_group_by">state</attribute>
            </xpath>
        </field>
    </record>

    <record id="partner_agreement_list_view" model="ir.ui.view">
        <field name="name">Agreement List</field>
        <field name="model">agreement</field>
        <field name="inherit_id" ref="agreement_legal.partner_agreement_list_view"/>
        <field name="arch" type="xml">
            <field name="agreement_subtype_id" position="after">
                <field name="state" string="Status"/>
            </field>
        </field>
    </record>

    <record id="agreement_templates_view" model="ir.actions.act_window">
        <field name="name">Templates</field>
        <field name="res_model">agreement</field>
        <field name="domain">[('is_template', '=', True)]</field>
        <field name="context">{'is_template':True}</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="agreement_view_tree" model="ir.ui.view">
        <field name="name">Agreement Tree</field>
        <field name="model">agreement</field>
        <field name="inherit_id" ref="agreement_legal.partner_agreement_list_view"/>
        <field name="mode">primary</field>
        <field name="priority" eval="9999"/>
        <field name="arch" type="xml">
            <xpath expr="/tree" position="attributes">
                <attribute name="create">false</attribute>
            </xpath>
            <field name="partner_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="agreement_subtype_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

    <record id="agreement_view_form" model="ir.ui.view">
        <field name="name">Agreement Form User</field>
        <field name="model">agreement</field>
        <field name="inherit_id" ref="agreement_legal.partner_agreement_form_view"/>
        <field name="mode">primary</field>
        <field name="priority" eval="9999"/>
        <field name="arch" type="xml">
            <xpath expr="/form" position="attributes">
                <attribute name="create">false</attribute>
                <attribute name="edit">false</attribute>
            </xpath>
            <button name="create_new_version" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
        </field>
    </record>

    <record id="agreement_tree_action" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="agreement_view_tree"/>
        <field name="act_window_id" ref="agreement_templates_view"/>
    </record>

    <record id="agreement_form_action" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="agreement_view_form"/>
        <field name="act_window_id" ref="agreement_templates_view"/>
    </record>

    <menuitem name="Templates"
              id="menu_agreement_list"
              parent="agreement_legal.agreement_operations"
              action="agreement_templates_view"
              sequence="20"/>

</odoo>
