<odoo>
    <!-- Form View -->
    <record id="contract_transfer_view_form" model="ir.ui.view">
        <field name="name">contract.transfer.form</field>
        <field name="model">contract.transfer</field>
        <field name="arch" type="xml">
            <form string="Transfer Contract">
                <group>
                    <group>
                        <field name="partner_id" domain="[('customer', '=', True)]"/>
                        <field name="partner_contact_id" attrs="{'invisible':[('partner_id', '=', False)]}" domain="[('parent_id', '=', partner_id)]"/>
                        <field name="date_contract"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                </group>
                <footer>
                    <button string="Confirm" name="action_transfer_contract" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action Transfer Contract -->
    <record id="contract_transfer_action" model="ir.actions.act_window">
        <field name="name">Transfer Contract</field>
        <field name="res_model">contract.transfer</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
