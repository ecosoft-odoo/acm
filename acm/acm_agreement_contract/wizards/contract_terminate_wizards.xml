<odoo>
    <!-- Form View -->
    <record id="contract_terminate_view_form" model="ir.ui.view">
        <field name="name">contract.terminate.form</field>
        <field name="model">contract.terminate</field>
        <field name="arch" type="xml">
            <form string="Terminate Contract">
                <group>
                    <group>
                        <field name="termination_by"/>
                        <field name="date_termination_requested"/>
                        <field name="date_termination"/>
                    </group>
                    <group>
                        <field name="reason_termination"/>
                    </group>
                </group>
                <group string="Lessee Pay">
                    <field name="lessee_terminate_line_ids" nolabel="1" context="{'default_invoice_type': 'out_invoice'}">
                        <tree editable="buttom">
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="qty"/>
                            <field name="uom_id" groups="uom.group_uom"/>
                            <field name="lst_price"/>
                            <field name="invoice_type" invisible="1"/>
                        </tree>
                    </field>
                </group>
                <group string="Lessor Pay">
                    <field name="lessor_terminate_line_ids" nolabel="1" context="{'default_invoice_type': 'in_invoice'}">
                        <tree editable="buttom">
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="qty"/>
                            <field name="uom_id" groups="uom.group_uom"/>
                            <field name="lst_price"/>
                            <field name="invoice_type" invisible="1"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button string="Confirm" name="action_terminate_contract" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action Terminate Contract -->
    <record id="contract_terminate_action" model="ir.actions.act_window">
        <field name="name">Terminate Contract</field>
        <field name="res_model">contract.terminate</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
