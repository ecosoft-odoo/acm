<odoo>
    <!-- Form View -->
    <record id="contract_breach_view_form" model="ir.ui.view">
        <field name="name">contract.breach.form</field>
        <field name="model">contract.breach</field>
        <field name="arch" type="xml">
            <form string="Breach Contract">
                <group>
                    <group>
                        <field name="date_breach" invisible="context.get('type') != 'breach'" required="context.get('type') == 'breach'"/>
                        <field name="type_breach" invisible="context.get('type') != 'breach'" required="context.get('type') == 'breach'"/>
                        <field name="date_cancel_breach" invisible="context.get('type') != 'cancel_breach'" required="context.get('type') == 'cancel_breach'"/>
                    </group>
                </group>
                <group string="Reason" invisible="context.get('type') != 'breach'">
                    <field name="reason_breach" nolabel="1" required="context.get('type') == 'breach'"/>
                </group>
                <group string="Reason" invisible="context.get('type') != 'cancel_breach'">
                    <field name="reason_cancel_breach" nolabel="1" required="context.get('type') == 'cancel_breach'"/>
                </group>
                <footer>
                    <button string="Confirm" name="action_breach_contract" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action Breach Contract -->
    <record id="contract_breach_action" model="ir.actions.act_window">
        <field name="name">Breach Contract</field>
        <field name="res_model">contract.breach</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
