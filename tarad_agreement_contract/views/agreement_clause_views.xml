<odoo>

    <record id="partner_agreement_clause_list_view" model="ir.ui.view">
        <field name="name">Agreement Clause List</field>
        <field name="model">agreement.clause</field>
        <field name="inherit_id" ref="agreement_legal.partner_agreement_clause_list_view"/>
        <field name="arch" type="xml">
            <field name="agreement_id" position="after">
                <field name="contract_genre"/>
            </field>
        </field>
    </record>

    <record id="partner_agreement_clause_form_view" model="ir.ui.view">
        <field name="name">Agreement clause Form</field>
        <field name="model">agreement.clause</field>
        <field name="inherit_id" ref="agreement_legal.partner_agreement_clause_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet//group[1]//group[1]//field[@name='section_id']" position="after">
                <field name="contract_genre"/>
            </xpath>
        </field>
    </record>

</odoo>
