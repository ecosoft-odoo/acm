<odoo>

    <!-- Agreement Sub Type List View-->
    <record id="partner_agreement_contract_genre_list_view" model="ir.ui.view">
        <field name="name">Agreement Contract Genre List</field>
        <field name="model">agreement.genre</field>
        <field name="arch" type="xml">
            <tree default_order='name'>
                <field name="name" string="Title"/>
            </tree>
        </field>
    </record>

    <!-- Agreement Sub Type Form View -->
    <record id="partner_agreement_contract_genre_form_view" model="ir.ui.view">
        <field name="name">Agreement Contract Genre Form</field>
        <field name="model">agreement.genre</field>
        <field name="arch" type="xml">
            <form string="Agreement Genres">
                <sheet>
                    <label for="name" class="oe_edit_only"/>
                    <h1><field name="name"/></h1>
                </sheet>
            </form>
        </field>
    </record>

    <record id="partner_agreement_action_contract_genre" model="ir.actions.act_window">
        <field name="name">Agreement Contract Genre</field>
        <field name="res_model">agreement.genre</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
