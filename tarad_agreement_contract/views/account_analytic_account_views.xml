<odoo>

    <record id="view_account_analytic_account_form" model="ir.ui.view">
        <field name="name">Contract form</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="contract.account_analytic_account_recurring_form_form"/>
        <field name="arch" type="xml">
            <button name="action_contract_send" position="after">
                <button name="%(tarad_agreement_contract.action_account_analytic_account_create)d"
                        string="Create Contract"
                        type="action"
                        class="oe_highlight"
                        />
            </button>

            <field name="group_id" position="after">
                <field name="contract_genre"/>
                <field name="renew_contract_id" string="To Contract"/>
                <field name="update_contract" invisible="1"/>
                <field name="reject_date"
                       attrs="{'invisible': [('contract_genre', '!=', 'reject')]}"
                       />
                <field name="violate_date"
                       attrs="{'invisible': [('contract_genre', '!=', 'violate')]}"
                       />
            </field>

            <field name="recurring_invoice_line_ids" position="after">
                <label for="description" attrs="{'invisible': [('contract_genre', '!=', 'violate')]}"/>
                <div>
                    <field name="description"
                           attrs="{'invisible': [('contract_genre', '!=', 'violate')]}"
                           />
                </div>
            </field>

            <button name="recurring_create_invoice" position="attributes">
                <attribute name="attrs">{'invisible': [('active', '=', False)]}</attribute>
            </button>

        </field>
    </record>

</odoo>
