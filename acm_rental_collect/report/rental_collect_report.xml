<odoo>

    <template id="report_rental_collection">
        <t t-call="web.html_container">
            <t t-call="acm_rental_collect.internal_layout">
                <div class="page">
                    <div class="row">
                        <div class="col-6">
                            <span t-field="res_company.partner_id.name"/>
                            รายชื่อผู้เช่าแผงลอยตลาดวโรรส
                            เดือน <span t-esc="month"/>
                            ปี <span t-esc="year"/>
                        </div>
                        <div class="col-6 text-right">
                            ออกวันที่ : <span t-esc="current_date"/>
                            <span t-esc="current_month"/>
                            <span t-esc="current_year"/>
                        </div>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th class="head_table center" style="width: 3%;">ลำดับ</th>
                                <th class="head_table center" style="width: 3%;">ล็อค</th>
                                <th class="head_table center">ชื่อ - สกุล</th>
                                <th class="head_table center" style="width: 8%;">ประเภทสินค้า</th>
                                <th class="head_table center" style="width: 5%;">ค่าเช่า</th>
                                <th class="head_table center" style="width: 5%;">ยกมา</th>
                                <t t-foreach="range(end_date)" t-as="i">
                                    <th class="head_table center" style="width: 2.1%;" t-esc="i+1"/>
                                </t>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="j" t-value="1"/>
                            <tr t-foreach="products" t-as="o">
                                <td class="head_table center" t-esc="j"/>
                                <t t-set="j" t-value="j+1"/>
                                <td class="head_table center">
                                    <span t-field="o.name"/>
                                </td>
                                <td class="head_table">
                                    <span t-esc="line_dict.get(o.id, {}).get('partner_name')"/>
                                </td>
                                <td class="head_table center">
                                    <span t-esc="line_dict.get(o.id, {}).get('goods_type')"/>
                                </td>
                                <td class="head_table right">
                                    <span t-esc="line_dict.get(o.id, {}).get('lst_price')"/>
                                </td>
                                <td class="head_table center"/>
                                <t t-foreach="range(end_date)" t-as="i">
                                    <td class="head_table center" style="width: 2.1%;"/>
                                </t>
                            </tr>
                            <tr>
                                <td class="head_table"/>
                                <td class="head_table"/>
                                <td class="head_table"/>
                                <td class="head_table"/>
                                <td class="head_table right" t-esc="'%.2f' % amount"/>
                                <td class="head_table"/>
                                <t t-foreach="range(end_date)" t-as="i">
                                    <td class="head_table center" style="width: 2.1%;"/>
                                </t>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

</odoo>
