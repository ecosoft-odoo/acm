<odoo>

    <record id="view_contract_create" model="ir.ui.view">
        <field name="name">contract.create.form</field>
        <field name="model">contract.create</field>
        <field name="arch" type="xml">
            <form string="Contract">
                <group>
                    <group>
                        <field name="contract_create_type" widget="radio"/>
                        <field name="cancel_date"
                               attrs="{'invisible':[('contract_create_type', '!=', 'violate')]}"
                        />
                    </group>
                    <group>
                        <field name="name"
                               string="Agreement Name"
                               attrs="{'invisible':[('contract_create_type', '!=', 'transfer')]}"
                        />
                        <field name="new_partner"
                               string="New Partner"
                               attrs="{'invisible':[('contract_create_type', '!=', 'transfer')]}"
                        />
                        <field name="start_date"
                               attrs="{'invisible':['|', ('contract_create_type', '==', 'reject'), ('contract_create_type', '==', 'violate')]}"
                        />
                        <field name="end_date"
                               attrs="{'invisible':['|', ('contract_create_type', '==', 'reject'), ('contract_create_type', '==', 'violate')]}"
                        />
                        <label for="recurring_interval" attrs="{'invisible':['|', ('contract_create_type', '==', 'reject'), ('contract_create_type', '==', 'violate')]}"/>
                            <div>
                                <field name="recurring_interval"
                                       class="oe_inline"
                                       attrs="{'invisible':['|', ('contract_create_type', '==', 'reject'), ('contract_create_type', '==', 'violate')]}"
                                       />
                                <field name="recurring_rule_type"
                                       class="oe_inline"
                                       attrs="{'invisible':['|', ('contract_create_type', '==', 'reject'), ('contract_create_type', '==', 'violate')]}"
                                       />
                            </div>
                        <field name="cancel_date"
                               attrs="{'invisible': [('contract_create_type', '!=', 'reject')]}"
                        />
                    </group>
                </group>
                <label for="description" attrs="{'invisible':[('contract_create_type', '!=', 'violate')]}"/>
                    <div>
                        <field name="description"
                               string="Description"
                               attrs="{'invisible':[('contract_create_type', '!=', 'violate')]}"/>
                    </div>
                <footer>
                    <button string="Confirm"
                            name="action_create_contract"
                            type="object"
                            class="btn-primary"
                            />
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"
                            />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_contract_create" model="ir.actions.act_window">
        <field name="name">Contract</field>
        <field name="res_model">contract.create</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_contract_create"/>
        <field name="target">new</field>
    </record>

</odoo>
